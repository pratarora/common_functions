# Ubunutu dependencies required

apt-get update -qq && apt-get -y --no-install-recommends install \
  libxml2-dev \
  libcairo2-dev \
  libsqlite-dev \
  libmariadbd-dev \
  libmariadbclient-dev \
  libpq-dev \
  libssh2-1-dev \
  unixodbc-dev \
  libsasl2-dev \
  librsvg2-2 \
  librsvg2-dev \
  librsvg2-common \
  libbz2-dev \
  liblzma-dev \
  libglpk-dev \
  libfftw3-3
